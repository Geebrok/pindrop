<div class="col-md-4 col-md-offset-4">

	<%= image_tag @pin.image.url(:medium) %>

	<h3><%= @pin.description %></h3>

	<div class="center">
		<% if @pin.user == current_user %>			
			<p><%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-default" %>
			<%= link_to 'Back', pins_path, class: "btn btn-default" %></p>
			<p>To remove this pin just hit delete yo</p>
			<%= link_to 'Delete', @pins, method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-danger" %>			
		<% else %>
			<p><%= link_to 'Back', pins_path, class: "btn btn-default" %></p>
		<% end %>
	</div>

</div>
