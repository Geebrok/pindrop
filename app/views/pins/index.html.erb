<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th>Email</th>
      <th>user_id</th>
      <th>pin_id</th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= image_tag pin.image.url(:thumb) %></td>
        <td><%= pin.user.email %></td>
        <th><%= pin.user_id %></th>
        <th><%= pin.id %></th>
        <td><%= link_to 'Show', pin %></td>
        <% if pin.user == current_user %>        
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path %>
<% else %>
  <%= link_to "Add a Pin", new_user_registration_path , class: "btn btn-primary" %>
<% end %>    





